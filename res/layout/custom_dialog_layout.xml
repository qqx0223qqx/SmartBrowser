<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/y20"
    android:orientation="vertical">

    <!--这里数据较少，使用wrap_content，正常不允许这样设置-->
    <ListView
        android:id="@+id/custom_dialog_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:paddingLeft="@dimen/x60"
        android:paddingRight="@dimen/x60" />

    <TextView
        android:id="@+id/custom_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y18"
        android:textColor="#181b29"
        android:text="请勾选所有选项,并给予相关权限" />

    <Button
        android:id="@+id/custom_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y40"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/guide_btn_bg"
        android:enabled="false"
        android:textStyle="bold"
        android:text="完成授权"
        android:textColor="@drawable/guide_btn_text_color" />

</LinearLayout>